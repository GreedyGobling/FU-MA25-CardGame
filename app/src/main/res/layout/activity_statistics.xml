        android:textSize="32sp"/>

    <TextView
        android:paddingTop="24dp"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="games played"
        android:textSize="24sp"/>

    <TextView
        android:paddingTop="24dp"
        android:id="@+id/text2"
        android:layout_width="wrap_content"
